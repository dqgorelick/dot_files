" Defaults
filetype on
filetype plugin indent on
filetype plugin on
syn on
set mouse=a
set nu
set numberwidth=3
set guifont=Inconsolata\ For\ Powerline
set guioptions-=r

highlight MatchParen cterm=bold ctermfg=white ctermbg=black

" Indentation
set expandtab
set shiftwidth=4
set smarttab
set softtabstop=4
set autoindent
set smartindent
set tabstop=2
